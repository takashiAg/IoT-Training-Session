void setup() {

  USE_SERIAL.begin(115200);

  USE_SERIAL.println();
  USE_SERIAL.println();
  USE_SERIAL.println();

  for (uint8_t t = 4; t > 0; t--) {
    USE_SERIAL.printf("[SETUP] WAIT %d...\n", t);
    USE_SERIAL.flush();
    delay(1000);
  }
  pinMode(LED_BUILTIN, OUTPUT);

  wifiMulti.addAP(SSID, PASSWORD);

}

int access_server(String *response, String *error) {
  int isError = 0;
  if ((wifiMulti.run() == WL_CONNECTED)) {

    HTTPClient http;

    USE_SERIAL.print("[HTTP] begin...\n");
    // configure traged server and url
    //http.begin("https://www.howsmyssl.com/a/check", ca); //HTTPS
    http.begin(URI_GET); //HTTP

    USE_SERIAL.print("[HTTP] GET...\n");
    // start connection and send HTTP header
    int httpCode = http.GET();

    // httpCode will be negative on error
    if (httpCode > 0) {
      // HTTP header has been send and Server response header has been handled
      USE_SERIAL.printf("[HTTP] GET... code: %d\n", httpCode);

      // file found at server
      if (httpCode == HTTP_CODE_OK) {
        String payload = http.getString();
        *response = payload;
      }
    } else {
      isError = 1;
      *error = http.errorToString(httpCode).c_str();
    }

    http.end();
  }
  return isError;
}


void loop() {
  USE_SERIAL.println();
  USE_SERIAL.println("loop started");
  delay(5000);


  USE_SERIAL.println("accessing to server");
  String responseString = "";
  String error = "";
  int isError = access_server(&responseString, &error);


  USE_SERIAL.println("checking Error");
  //エラーが起こってたら、リトライ。
  if (isError != 0) {
    USE_SERIAL.print("error caused");
    USE_SERIAL.println(error);
    return ;
  }

  //エラーじゃなかったら、とりあえずレスポンスを出そう！！
  USE_SERIAL.println("this is response from server:");
  USE_SERIAL.println(responseString);

  JSONVar response = JSON.parse(responseString);

  if (!response.hasOwnProperty("error")) return;
  if ((bool) response["error"])
    return ;

  if (!response.hasOwnProperty("value")) return;
  bool value = (bool) response["value"];
  USE_SERIAL.print("responsed value is ");
  USE_SERIAL.print(value);
  USE_SERIAL.println(".");

  
  digitalWrite(LED_BUILTIN, value);   // turn the LED on (HIGH is the voltage level)

}
